{
  "name": "koan",
  "description": "A Koa.js Application Boilerplate",
  "version": "0.0.4",
  "homepage": "https://github.com/bredikhin/koan",
  "keywords": [
    "koa",
    "web",
    "web-framework",
    "mvc",
    "app",
    "application",
    "koan",
    "koanjs",
    "koan.js",
    "boilerplate"
  ],
  "dependencies": {
    "koa": "~0.3.0",
    "co-views": "~0.1.0",
    "koa-logger": "~1.1.1",
    "koa-route": "~1.0.2",
    "koa-static": "~1.4.2",
    "lodash": "~2.4.1",
    "optimist": "~0.6.0",
    "fs-extra": "~0.8.1"
  },
  "devDependencies": {
    "mocha": "~1.17.0",
    "supervisor": "~0.5.6",
    "wrench": "~1.5.6",
    "coveralls": "~2.7.0",
    "istanbul": "~0.2.4"
  },
  "scripts": {
    "start": "node --harmony index.js",
    "debug": "node debug --harmony index.js",
    "test": "PORT=9999 NODE_ENV=test node --harmony ./node_modules/istanbul/lib/cli.js cover --hook-run-in-context ./node_modules/mocha/bin/_mocha  -- -R spec --recursive",
    "autotest": "./node_modules/.bin/supervisor -i .tmp -q -n exit -x ./node_modules/.bin/mocha -- --harmony -R spec -G -b --recursive"
  },
  "engines": {
    "node": ">= 0.11.3"
  },
  "main": "./lib/index",
  "directories": {
    "lib": "lib"
  },
  "bin": {
    "koan": "./bin/koan.js"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com:bredikhin/koan.git"
  },
  "bugs": {
    "url": "http://github.com/bredikhin/koan/issues"
  },
  "author": "Ruslan Bredikhin",
  "license": {
    "type": "MIT",
    "url": "http://www.opensource.org/licenses/MIT"
  }
}
